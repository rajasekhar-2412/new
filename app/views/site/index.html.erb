<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
<% unless current_user %>
    <div class="panel">
      <h1>Share your bookmarks!</h1>
      <p>A simple app to track and share your beloved bookmarks with others.</p>
      <%= link_to "Get started today", new_user_registration_path, :class => "button button-large" %>
    </div>
<%end%>

<h2>Latest Bookmarks</h2>
<table style="width: 100%">
  <thead>
  <tr>
    <th>Bookmark Category</th>
    <th>Url</th>
  </tr>
  </thead>

  <tbody>
  <% @bookmarks.each do |bookmark| %>
      <tr>
        <h1>
          <td><%= bookmark.category.try(:name)%></td>
        </h1>

        <h1>
          <td><%= link_to bookmark.title, bookmark.url %></td>
        </h1>
      </tr>
  <% end %>
  </tbody>
</table>

<hr>

<div class="row">
  <div class="large-8 columns">
    <h3>My Bookmarks</h3>
    <p>
      Let's store your bookmarks and share your favourite bookmarks to everybody.
    </p>

  </div>
  <div class="large-4 columns">
    <h3>About this app</h3>
    <p>This is a tutorial app  </p>
  </div>
</div>


<% if current_user %>
    <hr>
    <%= column_chart @users , {library: {title: "User's Login Activity"}}%>
<% end %>