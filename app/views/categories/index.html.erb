<h1>Listing categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th style="text-align: center" colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Show', category,:class => "button blue awesome" %></td>
        <td><%= link_to 'Edit', edit_category_path(category),:class => "button blue awesome" %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' },:class => "button red awesome" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path , :class => "button blue awesome"%>
