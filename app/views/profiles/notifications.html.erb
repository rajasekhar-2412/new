<h2>Notifications </h2>
<table style="width: 100%">
  <thead>
  <tr>
    <th colspan="3">Friend</th>
  </tr>
  </thead>

  <tbody>
  <% @notifications.each do |noti| %>
      <tr>
        <td><%= noti.user.username.capitalize %></td>
        <td><%= link_to 'Accept',update_friend_path(:friend_id=> "#{noti.user.id}", :for => "Added"), data: {confirm: "Are you sure? "}, :class => "button" %></td>
        <td><%= link_to 'Reject',update_friend_path(:friend_id=> "#{noti.user.id}", :for => "Rejected"), data: {confirm: "Are you sure? "}, :class => "button secondary" %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%#= paginate @users %>